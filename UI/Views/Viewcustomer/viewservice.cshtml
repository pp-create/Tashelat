
@{
    ViewData["Title"] = "viewservice";
    Layout = "~/Views/Shared/_layoutUser.cshtml";
    var showError = ViewBag.ShowError as bool? ?? false;
    var showSuccess = ViewBag.ShowSuccess as bool? ?? false;
}

<main class="main">

    <!-- Page Title -->
    <div class="page-title" data-aos="fade">
        <div class="heading">
            <div class="container">
                <div class="row d-flex justify-content-center text-center">
                    <div class="col-lg-8">
                        <h1>  @ViewBag.sidename </h1>
                        <p class="mb-0">
                           @ViewBag.contect
                            
                        </p>
                    </div>
                </div>
            </div>
        </div>
        <nav class="breadcrumbs">
            <div class="container">
                <ol>
                    <li><a href="/Viewcustomer/index">الرئيسية</a></li>
                    <li class="#">  @ViewBag.sidename</li>
                </ol>
            </div>
        </nav>
    </div><!-- End Page Title -->
    <!-- Starter Section Section -->
    <!-- Appointment Section -->
    <section id="appointment" class="appointment section">

        <!-- Section Title -->
        <div class="container section-title" data-aos="fade-up">
            <h2>طلب تمويل</h2>
            <p>أحصل على التمويل المناسب لك فقط بضغطة زر</p>
        </div><!-- End Section Title -->
        <div class="container" data-aos="fade-up" data-aos-delay="100">

            <form asp-action="Addrequest" method="post" role="form" enctype="multipart/form-data">
                <div class="row">
                    <div class="col-md-4 form-group">
                        <input type="text" name="name" class="form-control" id="name" placeholder="إسمك" required="">
                    </div>
                    <div class="col-md-4 form-group mt-3 mt-md-0">
                        <input type="tel" class="form-control" name="phone" id="phone" placeholder="رقم الهاتف" required="">
                    </div>
                    <div class="col-md-4 form-group mt-3 mt-md-0" style="display:none">
                        <input type="number" class="form-control" value="1" name="nid" id="email" placeholder="رقم الهويه " required="">
                    </div>


                </div>
                <div class="row">
                    <div class="col-md-4 form-group mt-3" style="display:none">
                        <input type="number" class="form-control" name="salary" value="1111111" id="email" placeholder="الراتب  " required="">
                    </div>
                    <div class="col-md-4 form-group mt-3" style="display:none">
                        <input type="text" class="form-control" name="namebank" value="w" id="email" placeholder=" اسم بنك    " required="">
                    </div>
                    <div class="col-md-4 form-group mt-3">
                        <select name="livesin" id="doctor" class="form-select" required="">
                            <option value="">الجنسية</option>
                            <option value="سعودى">سعودى</option>
                            <option value="غير سعودى">غير سعودى</option>

                        </select>
                    </div>
                    <div class="col-md-4 form-group mt-3">
                        <select name="type" id="department" class="form-select" required="">

                            <option value="@ViewBag.sidename" selected>@ViewBag.sidename</option>
                            <option value="تمويل شخصى">تمويل شخصى</option>
                            <option value="رهن عقاري">رهن عقاري</option>
                            <option value="تمويل نقاط البيع">تمويل نقاط البيع</option>
                            <option value="تمويل سيارة">تمويل سيارة</option>
                        </select>
                    </div>

                </div>


                <div class="mt-3">

                    @if (showError)
                    {
                        <div class="btn-danger" style="text-align:center">حدث خطأ أثناء إرسال الطلب. يرجى المحاولة لاحقًا.</div>
                    }
                    @if (showSuccess)
                    {
                        <div class="btn-info" style="text-align:center">تم إرسال الطلب. شكراً لك.</div>
                    }
                    <div class="text-center"><button type="submit" class="btn btn-primary">إرسال  الطلب </button></div>
                </div>
            </form>

        </div>><!-- End Section Title -->

    </section><!-- /Appointment Section -->


</main>
<script src="~/jquery/jquery.min.js"></script>

