@model IEnumerable<DAL.ViewModel.ContactVM>

@{
    ViewData["Title"] = "get";
}

<div class="modal fade" id="myModal" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-body" id="Data" style="border:none;">
                <p>Some text in the modal.</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-success" data-dismiss="modal" style="margin:auto">Close</button>
            </div>
        </div>

    </div>
</div>

<div class="breadcrumbs" style="direction:rtl;display: block;">
    <div class="breadcrumbs-inner">
        <div class="row m-0">
            <div class="col-sm-4">
                <div class="page-header float-right">
                    <div class="page-title">
                        <h1> تواصل معنا</h1>
                    </div>
                </div>
            </div>
            <div class="col-sm-8">
                <div class="page-header float-left">
                    <div class="page-title">
                        <ol class="breadcrumb text-left">
                            <li><a style="text-decoration: auto;" href="/Home/Index">الصفحة الرئيسة</a></li>
                            <li>&nbsp / &nbsp </li>
                            <li class="active"> تواصل معنا  </li>
                        </ol>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="content">
    <div class="animated fadeIn">
        <div class="row">
            <div class="col-md-12">
                <div class="card" style="direction:rtl;display: block;">
                    <div class="card-header" style=" display: flex; justify-content: space-between;">
                        <strong class="card-title">*</strong>

                        <a href="/Home/contect" type="button" class="btn btn-outline-info">  <span>تواصل معنا</span> &nbsp +</a>
                    </div>
                    <div class="card-body">
                        <table id="tblSlider" class="table table-striped table-bordered">
                            <thead>
                                <tr>

                                    <th scope="col"> الاميل</th>
                                    <th scope="col">تلفون </th>
                                    <th scope="col">العنوان </th>
                                    <th scope="col">التاريخ </th>


                                </tr>
                            </thead>
                            <tbody>

                                @foreach (var item in Model)
                                {

                                    <tr>
                                      
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Gamil)
                                        </td>
                                     
                                        <td>
                                            @Html.DisplayFor(modelItem => item.phone)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.adderies)
                                        </td>
                                       
                                        <td>
                                            @Html.DisplayFor(modelItem => item.CreationDate)
                                        </td>
                                       
                                   
                                        <td>
                                            <div class="row @*w-75 m-aito*@">
                                                <a asp-action="editecontect" asp-controller="Home" asp-route-id=@item.Id class="col-4 btn edite m-0 p-1" data-bs-toggle="tooltip" data-bs-placement="top" title="Edit">
                                                    <i style="color: #13e195;" class="fa-solid fa-pen-to-square"></i>
                                                </a>
                                                <a asp-action="Deletecontect" asp-controller="Home" asp-route-id=@item.Id class="col-4 btn delete m-0 p-1 p-1" data-bs-toggle="tooltip" data-bs-placement="top" title="Delete">
                                                    <i style="color: red;" class="fa-solid fa-trash-can"></i>
                                                </a>


                                            </div>


                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div><!-- .animated -->
</div><!-- .content -->




<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" integrity="sha512-SnH5WK+bZxgPHs44uWIX+LLJAJ9/2PkPKZ5QiAj6Ta86w+fsb2TkcmfRyVX3pBnMFcV7oQPJkl9QevSCWr3W6A==" crossorigin="anonymous" referrerpolicy="no-referrer" />
