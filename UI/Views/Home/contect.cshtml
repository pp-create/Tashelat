@model DAL.ViewModel.ContactVM

@{
    ViewData["Title"] = "contect";
}

<h1>تواصل معنا</h1>
<hr />
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Contact Form</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <style>
        .form-container {
            max-width: 600px; /* Limit the width of the form */
            margin: 0 auto; /* Center the form horizontally */
            padding: 20px; /* Add some padding around the form */
            border: 1px solid #ddd; /* Add a border around the form */
            border-radius: 8px; /* Round the corners */
            box-shadow: 0 4px 8px rgba(0,0,0,0.1); /* Add a subtle shadow */
            background-color: #fff; /* Set background color to white */
        }

        .form-group label {
            font-weight: bold; /* Make label text bold */
        }

        .btn-primary {
            background-color: #007bff; /* Primary button color */
            border-color: #007bff; /* Border color to match button */
        }

            .btn-primary:hover {
                background-color: #0056b3; /* Darker shade for hover effect */
                border-color: #004085; /* Darker border color on hover */
            }
    </style>
</head>
<body>

    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="form-container">
                    <form asp-action="contect">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="name" class="control-label">اسم الموقع</label>
                            <input asp-for="name" type="text" class="form-control" />
                            <span asp-validation-for="name" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Facebock" class="control-label">حساب الفيس بوك</label>
                            <input asp-for="Facebock" type="url" class="form-control" />
                            <span asp-validation-for="Facebock" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="tiktok" class="control-label">انيستا </label>
                            <input asp-for="tiktok" type="url" class="form-control" />
                            <span asp-validation-for="tiktok" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="twiter" class="control-label">تويتر</label>
                            <input asp-for="twiter" type="url" class="form-control" />
                            <span asp-validation-for="twiter" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Gamil" class="control-label">جيميل</label>
                            <input asp-for="Gamil" type="text" class="form-control" />
                            <span asp-validation-for="Gamil" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="linkedin" class="control-label">لينكد إن</label>
                            <input asp-for="linkedin" type="url" class="form-control" />
                            <span asp-validation-for="linkedin" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="phone" class="control-label">رقم الهاتف</label>
                            <input asp-for="phone" class="form-control" />
                            <span asp-validation-for="phone" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="adderies" class="control-label">العنوان</label>
                            <input asp-for="adderies" type="text" class="form-control" />
                            <span asp-validation-for="adderies" class="text-danger"></span>
                        </div>

                      

                        <div class="form-group">
                            <label asp-for="CreationDate" class="control-label">تاريخ الإنشاء</label>
                            <input asp-for="CreationDate" type="datetime-local" class="form-control" />
                            <span asp-validation-for="CreationDate" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <input type="submit" value="إنشاء" class="btn btn-primary" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
  
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>


<div>
    <a asp-action="Index">Back to List</a>
</div>



