@model IEnumerable<DAL.ViewModel.UserVM>

@{
    ViewData["Title"] = "Getuser";
}
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
<div class="breadcrumbs" style="direction:rtl;display: block;">
    <div class="breadcrumbs-inner">
        <div class="row m-0">
            <div class="col-sm-4">
                <div class="page-header float-right">
                    <div class="page-title">
                        <h1>مستخدمين</h1>
                    </div>
                </div>
            </div>
            <div class="col-sm-8">
                <div class="page-header float-left">
                    <div class="page-title">
                        <ol class="breadcrumb text-left">
                            <li><a style="text-decoration: auto;" href="/Home/Index">الصفحة الرئيسة</a></li>
                            <li>&nbsp / &nbsp </li>
                            <li class="active">مستخدمين </li>
                        </ol>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="content">
    <div class="animated fadeIn">
        <div class="row">
            <div class="col-md-12">
                <div class="card" style="direction:rtl;display: block;">
                    <div class="card-header" style=" display: flex; justify-content: space-between;">
                        <strong class="card-title">Courses Table</strong>

                        <a href="/User/index" type="button" class="btn btn-outline-info">  <span>أضافة مستخدم</span> &nbsp +</a>
                    </div>
                    <div class="card-body">
                        <table id="tblSlider" class="table table-striped table-bordered">
                            <thead>
                                <tr>

                                    <th scope="col"> امستخدم</th>
                                    <th scope="col">رقم  </th>
                                    <th scope="col">البريد الكتروني </th>
                                    <th scope="col">الوظيفه </th>
                                    <th scope="col">التاريخ </th>
                                    <th scope="col">كلمه المرور</th>
                                    <th>---</th>

                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.UserName)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.phone)
                                        </td>
                                      
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Email)
                                        </td>
                                       
                                     
                                        <td>
                                            @Html.DisplayFor(modelItem => item.RoleName)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.CreationDate)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.password)
                                        </td>
                                       
                                        <td>
                                            
                                                <a asp-action="Delete" asp-controller="User" asp-route-id=@item.Id class="col-4 btn delete m-0 p-1 p-1" data-bs-toggle="tooltip" data-bs-placement="top" title="Delete">
                                                <i style="color: red;" class="fas fa-trash-alt"></i>
                                                </a>


                                           


                                       
                                    </tr>
                                }
                 
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div><!-- .animated -->
</div><!-- .content -->
